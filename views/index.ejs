<!-- index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OneDocs Asistan</title>
  <link rel="stylesheet" href="style.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .chat-button {
      position: fixed;
      bottom: 0;
      right: 0;
    }
  </style>
</head>
<body>
  <div class="chat-box">
    <div class="chat-box-header">
      <h3>OneDocs Asistan</h3>
      <p><i class="fa fa-times"></i></p>
    </div>
    <div class="chat-box-body">
      <div class="chat-box-body-send">
        <p>Görevler</p>
        <span>12:00</span>
      </div>
      <div class="chat-box-body-receive">
        <p>Görevleriniz: Toplantı düzenlenecek</p>
        <span>12:01</span>
      </div>
    </div>
    <div class="chat-box-footer">
      <button id="addExtra"><i class="fa fa-plus"></i></button>
      <input placeholder="Komutunuzu giriniz" type="text" />
      <i class="send far fa-paper-plane"></i>
    </div>
  </div>

  <div class="chat-button"><span></span></div>

  <div class="modal">
    <div class="modal-content">
      <span class="modal-close-button">&times;</span>
      <h1>Sonradan eklenebilir</h1>
    </div>
  </div>

  <script src="script.js"></script>
</body>
</html>
